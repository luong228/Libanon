@model Libanon.Models.DTO.OtpCodeDTO
@{
    ViewBag.Title = "VerifyOtp";
}

<h2>VerifyOtp</h2>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Verity Otp Code to update your book</h2>
            <hr />
        </div>
        <div class="row">
            <div class="form-group mb-3 col-6">
                @Html.LabelFor(o => o.OtpCode) <br />
                @Html.TextBoxFor(o => o.OtpCode, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(o => o.OtpCode, "", new { @class = "text-danger" })
            </div>

        </div>
        <button class="btn btn-primary ml-3" type="submit">Verify OTP</button>
    </div>
    
</form>
