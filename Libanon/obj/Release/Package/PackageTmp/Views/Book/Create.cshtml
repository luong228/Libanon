                @Html.LabelFor(b => b.OwnerPhone) <br />
                @Html.TextBoxFor(b => b.OwnerPhone, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(b => b.OwnerPhone, "", new { @class = "text-danger" })
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        <a href="@Url.Action("Index", "Book")" class="btn btn-secondary" style="width: 150px">
            Back to List
